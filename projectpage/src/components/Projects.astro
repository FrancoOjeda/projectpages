---
import FourCardFeature from './challenge/FourCardFeature.astro'
import QrCodeComponentMain from './challenge/QrCodeComponentMain.astro'
import ProductList from './challenge/ProductList.astro'
---

<section>
  <h2>Proyectos Realizados</h2>
  <article>
    <ProductList />
  </article>
  <article>
    <FourCardFeature />
  </article>
  <article>
    <QrCodeComponentMain />
  </article>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 16px auto;
    gap: 16px;
    width: 80%;
  }

  h2 {
    color: hsl(0, 0%, 100%);
  }

  @media (width < 600px) {
    h2 {
      align-self: flex-start;
    }
  }
  article {
    animation: revelar linear both;
    animation-timeline: view();
    animation-range: entry 5% cover 15%;
  }

  @keyframes revelar {
    from {
      opacity: 0;
      translate: 0 100px;
      scale: 0.5;
    }
    to {
      opacity: 1;
      translate: 0 0;
      scale: 1;
    }
  }
</style>
