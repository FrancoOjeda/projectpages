---
import FourCardFeature from './challenge/FourCardFeature.astro'
import QrCodeComponentMain from './challenge/QrCodeComponentMain.astro'
import ProductList from './challenge/ProductList.astro'
---

<section>
  <h2>Proyectos Realizados</h2>
  <article>
    <ProductList />
  </article>
  <article>
    <FourCardFeature />
  </article>
  <article>
    <QrCodeComponentMain />
  </article>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 16px auto;
    gap: 16px;
    width: 80%;
  }

  h2 {
    color: hsl(0, 0%, 100%);
  }

  @media (width < 600px) {
    h2 {
      align-self: flex-start;
    }
  }
</style>
